<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="155dp"
    android:layout_height="50dp"
    android:background="@drawable/wooden_button"
    android:id="@+id/game_in_gamelist_layout"
    android:layout_marginBottom="5dp"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:orientation="vertical"
        >

        <TextView
            android:id="@+id/game_status_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginHorizontal="5dp"
            android:fontFamily="@font/vag_world"
            android:text="Игра не началась | 8888"
            android:textColor="@color/black"
            android:textSize="11sp" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/join_to_game_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="start"
                android:background="@drawable/join_button" />


            <TextView
                android:id="@+id/places_in_game"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginHorizontal="10dp"
                android:fontFamily="@font/vag_world"
                android:text="2/6"
                android:layout_marginBottom="-5dp"
                android:layout_marginTop="-5dp"
                android:textColor="@color/black"
                android:textSize="14sp" />

            <ImageView
                android:id="@+id/show_settings_button"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:background="@drawable/settings_button" />
        </LinearLayout>

    </LinearLayout>




</RelativeLayout>