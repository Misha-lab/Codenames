<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="370dp"
    android:background="@drawable/wooden_background_square1"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@color/black60"
        android:orientation="vertical"
        android:padding="10dp">

        <TextView
            android:id="@+id/what_team_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginBottom="5dp"
            android:fontFamily="@font/vag_world"
            android:textColor="@color/black"
            android:text="Red Team"
            android:paddingHorizontal="5dp"
            android:background="@color/white60"
            android:textSize="20sp" />

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_marginBottom="5dp"
            android:background="@color/black" />

        <include
            android:id="@+id/player0"
            layout="@layout/player_info_layout" />

        <include
            android:id="@+id/player1"
            layout="@layout/player_info_layout" />

        <include
            android:id="@+id/player2"
            layout="@layout/player_info_layout" />

        <include
            android:id="@+id/player3"
            layout="@layout/player_info_layout" />

        <include
            android:id="@+id/player4"
            layout="@layout/player_info_layout" />
    </LinearLayout>

</RelativeLayout>